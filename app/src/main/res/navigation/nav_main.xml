<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activity.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_postContentFragment"
            app:destination="@id/postContentFragment" />
        <action
            android:id="@+id/action_feedFragment_to_singlePostFragment"
            app:destination="@id/singlePostFragment" />

    </fragment>
    <fragment
        android:id="@+id/postContentFragment"
        android:name="ru.netology.nmedia.activity.PostContentFragment"
        android:label="post_content_fragment"
        tools:layout="@layout/post_content_fragment" />
    <fragment
        android:id="@+id/singlePostFragment"
        android:name="ru.netology.nmedia.activity.SinglePostFragment"
        android:label="single_post_fragment"
        tools:layout="@layout/single_post_fragment" >
        <action
            android:id="@+id/action_singlePostFragment_to_postContentFragment"
            app:destination="@id/postContentFragment" />
    </fragment>

</navigation>